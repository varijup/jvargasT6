<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jvargasT6.Vistas.vActualizar"
             Title="VARIJUP">
    <VerticalStackLayout>
        <Label
            Text="DATOS DEL USUARIO"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Entry x:Name="txtCodigo"
               Placeholder="Ingresar el Codigo"></Entry>
        <Entry x:Name="txtNombre"
               Placeholder="Ingresar el nombre"></Entry>
        <Entry x:Name="txtApellido"
               Placeholder="Ingresar el apellido"></Entry>
        <Entry x:Name="txtEdad"
               Placeholder="Ingresar el edad"></Entry>
        <Button x:Name="btnActualizar"
                Text="Actualizar"
                Clicked="btnActualizar_Clicked"></Button>
        <Button x:Name="btnEliminar"
                Text="Eliminar"
                Clicked="btnEliminar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>